<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bged">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:text="Currency Live Exchange Rate"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="25dp"
            android:layout_alignParentLeft="true" />


        <EditText
            android:layout_width="192dp"
            android:layout_height="40dp"
            android:id="@+id/value"
            android:layout_above="@+id/spin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-102dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="#ffff"
            android:hint="Enter Amount"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/spin"
            android:layout_width="92dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp"
            android:layout_marginTop="64dp"
            android:background="?attr/colorButtonNormal"></Spinner>

        <TextView
            android:id="@+id/dollar"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="131dp"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/euro"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/dollar"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pound"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/euro"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/naira"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/pound"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/conv"
            android:layout_width="135dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="260dp"
            android:text="Convert" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="210dp"
            android:text="Current Rates:"
            android:textColor="#ffff"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="156dp"
            app:srcCompat="@drawable/eu"
            android:layout_alignLeft="@+id/textView" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="116dp"
            app:srcCompat="@drawable/us"
            android:layout_alignLeft="@+id/textView" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="33dp"
            app:srcCompat="@drawable/ng"
            android:layout_alignLeft="@+id/textView" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="70dp"
            app:srcCompat="@drawable/br"
            android:layout_alignLeft="@+id/textView" />


        <TextView
            android:id="@+id/euroTextview"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="85dp"
            android:text="1 EUR = 1.14 USD"
            android:textColor="#ffff"
            android:layout_marginRight="85dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/dollarTextview"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignStart="@+id/euroTextview"
            android:layout_alignTop="@+id/imageView4"
            android:text="1 USD = 0.88 EUR"
            android:textColor="#ffff"
            android:layout_alignLeft="@+id/euroTextview" />


        <TextView
            android:id="@+id/nairaTextview"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignLeft="@id/euroTextview"
            android:layout_alignStart="@+id/euroTextview"
            android:layout_alignTop="@+id/imageView5"
            android:textColor="#ffff"
            android:text="1 USD = 364 NGN" />

        <TextView
            android:id="@+id/poundTextview"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignLeft="@id/nairaTextview"
            android:layout_alignStart="@+id/nairaTextview"
            android:layout_alignTop="@+id/imageView6"
            android:textColor="#ffff"
            android:text="1 USD = 0.78 GBP" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>