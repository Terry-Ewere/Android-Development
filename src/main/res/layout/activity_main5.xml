<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main5Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bged"
        >

        <EditText
            android:id="@+id/ed"
            android:layout_width="227dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="78dp"
            android:background="#ffff"
            android:inputType="numberDecimal"
            android:hint="Enter Value"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="Unit Converter"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/km"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_above="@+id/inch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />


        <Button
            android:id="@+id/conv"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="143dp"
            android:text="Convert" />

        <Button
            android:id="@+id/recent"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="86dp"
            android:text="View Recent" />


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="102dp"
            android:layout_height="46dp"
            android:layout_alignTop="@+id/ed"
            android:layout_toEndOf="@+id/conv"
            android:layout_toRightOf="@id/conv"
            android:background="?attr/colorButtonNormal" />

        <TextView
            android:id="@+id/inch"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_above="@+id/yard"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/yard"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_above="@+id/feet"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/feet"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_above="@+id/miles"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/miles"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="235dp"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>